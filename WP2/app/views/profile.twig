{% extends 'base.twig' %}
{% set headerRightDisplay = 'block' %}
{% set headerRightText = 'Выйти' %}
{% set headerRightLink = '/login/logout' %}
{% set menuActive = 'МОЙ ПРОФИЛЬ' %}

{% block title %}
    Мой профиль
{% endblock %}

{% block aside %}
    {{ include ('aside.twig') }}
{% endblock %}

{% block main %}
    <main class="main">
        <div class="info">
            <div class="info__left">
                <div class="info__pic-wrapper">
                    <div class="info__pic-block">
                        <img src="{{ photo }}" alt="" class="info__userpic">
                    </div>
                </div>
                <div class="info__change">
                    <a href="/profile/update" class="info__change-link">Изменить личные данные</a>
                </div>
            </div>
            <div class="info__right">
                <table class="info__table">
                    <tr class="info__tablerow">
                        <td class="info__titlecol">Имя:</td>
                        <td class="info__valuecol">{{ name }}</td>
                    </tr>
                    <tr class="info__tablerow">
                        <td class="info__titlecol">Возраст:</td>
                        <td class="info__valuecol">{{ age }}</td>
                    </tr>
                    <tr class="info__tablerow">
                        <td class="info__titlecol">Обо мне:</td>
                        <td class="info__valuecol">
                            <pre>{{ about }}</pre>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </main>
{% endblock %}

